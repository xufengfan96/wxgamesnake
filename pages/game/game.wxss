.container {
  padding: 0rpx;
  /* padding-top: 100rpx; */
  margin: 0rpx;
}
.content-top {
  position: absolute;
  display: flex;
  top: 1020rpx;
}
.top-item {
  flex: 1;
  height: 140rpx;
  margin: 0 20rpx;
  line-height: 140rpx;
  text-align: center;
  border-radius: 16rpx;
  width: 200rpx;
}

.top-start {
  font-size: 22px;
  background: deepskyblue;
  color: #fff;
}
.top-score {
  background: #ccddff;
}
.score-description {
  margin-top: 20rpx;
  line-height: 60rpx;
}
.score-number {
  line-height: 60rpx;
}
.content-bottom {
  position: absolute;
  display: flex;
  flex-direction: column;
  top: 150rpx;
  width: 660rpx;
  height: 840rpx;
}

.ground-row {
  display: flex;
}
.ground-col {
  flex: 1;
  width: 30rpx;
  height: 30rpx;
}
.block {
  width: 100%;
  height: 100%;
  background: #eee;
  background-size: auto 100%;
}
.music {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  left: 50rpx;
  top: 70rpx;
  background-size: auto 100%;
}

.rankButton {
  position: absolute;
  background-color: deepskyblue;
  color: #fff;
  text-align: center;
  border-radius: 15rpx;
  font-size: 35rpx;
  line-height: 45rpx;
  width: 180rpx;
  height: 50rpx;
  left: 525rpx;
  top: 75rpx;
}

.rankList {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.rollingCaption {
  width: 100%;
  height: 60rpx;
  position: fixed;
  top: 2rpx;
}
