/* pages/store/store.wxss */
.container {
  display: flex;
  padding: 15rpx;
  flex-direction: row;
  justify-content: left;
  flex-wrap: wrap;
}

.block {
  width: 100%;
  padding-top: 10rpx;
}

.block2 {
  width: 100%;
  padding-bottom: 150rpx;
}

.commodity {
  display: flex;
  padding-top: 20rpx;
  padding-left: 20rpx;
}

.img {
  width: 200rpx;
  height: 200rpx;
}

.details {
  position: relative;
  left: 15rpx;
  width: 65%;
  font-size: 35rpx;
}

.details .name {
  position: absolute;
  top: 20rpx;
  font-size: 45rpx;
}

.details .surplus {
  position: absolute;
  bottom: 55rpx;
}

.details .price {
  position: absolute;
  bottom: 10rpx;
  display: flex;
}

.details .button {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
}

.exchangeReport {
  position: absolute;
  background-color: deepskyblue;
  color: #fff;
  text-align: center;
  border-radius: 15rpx;
  font-size: 35rpx;
  line-height: 45rpx;
  width: 150rpx;
  height: 45rpx;
  left: 580rpx;
  top: 20rpx;
}

/* pages/scolling/scolling.wxss */
.notice {
  width: 92%;
  height: 56rpx;
  line-height: 56rpx;
  background-color: #fff;
  box-shadow: 0 3rpx 6rpx 1rpx rgba(0, 97, 6, 0.41);
  border-radius: 30rpx;
  position: fixed;
  top: 5rpx;
  left: 30rpx;
  display: flex;
  z-index: 5;
}

.notice .notice_desc {
  margin-right: 40rpx;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
}
